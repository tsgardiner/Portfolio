<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bit.gardits1.musicplayer">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AllSongsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AllAlbumsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AllArtistsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PlaylistsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".AlbumSongsActivity"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".ArtistSongsActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>